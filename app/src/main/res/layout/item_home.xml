<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="#ffffff">
    <TextView
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_width="260dp"
        android:focusable="true"
        android:ellipsize="marquee"
        android:scrollHorizontally="true"
        android:focusableInTouchMode="true"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="文章名称"
        android:textColor="@color/textRegular"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:id="@+id/article_name" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="文章的字数"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/article_name"
        android:layout_marginRight="16dp"
        android:id="@+id/article_character_number"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/textLittle"
        android:text="文章的写作时间"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/article_create_time"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#1f000000"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>